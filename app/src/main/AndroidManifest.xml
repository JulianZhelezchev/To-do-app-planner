<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project.todoapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.project.todoapp.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.project.todoapp.activities.CompletedTodos"
            android:parentActivityName="com.example.project.todoapp.activities.MainActivity" />
        <activity
            android:name="com.example.project.todoapp.activities.AllTags"
            android:parentActivityName="com.example.project.todoapp.activities.MainActivity" />
        <activity android:name="com.example.project.todoapp.activities.AppSettings" android:parentActivityName="com.example.project.todoapp.activities.MainActivity"></activity>
    </application>

</manifest>